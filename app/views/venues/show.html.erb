<% content_for :head do %>
  <meta property="og:url"           content="http://whelpsd.com<%= venue_path(@venue) %>" />
  <meta property="og:type"          content="website" />
  <meta property="og:title"         content="<%= @venue.name %>" />
  <meta property="og:description"   content="<%= @venue.description %>" />
  <meta property="og:image"         content="<%= @venue.image %>" />
<% end %>


<!-- Bootstrap Template -->
<div class="col-md-2"></div>
<div class="col-md-8">

  <div class="thumbnail">
    <div id="venue_map" data-venue-id="<%=@venue.id%>">
      Google Map will appear here...
    </div>

    <div class="caption-full">
      <div id="info-left">
        <div id="info-text">
          <p>
            <h3><%= @venue.name %></h3>
            <% if !current_user.nil? && @venue.user == current_user %>
              <%= link_to 'Edit', edit_venue_path(@venue) %> |
              <%= link_to 'Destroy', @venue, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </p>

          <p>
          <!-- Share/Tweet buttons for Facebook and Twitter -->
            <div class="fb-share-button" data-href="http://whelpsd.com<%= venue_path(@venue) %>" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%3A3000%2F&amp;src=sdkpreparse">Share</a></div>
            <a href="https://twitter.com/share/tweet?text=Bring%20your%20dogs%20to%20<%= @venue.name.gsub!(/\s/,'%20') %>%20as%20found%20on%20WhelpSD.com%21" class="twitter-share-button" data-show-count="false">Tweet</a>
          </p>

          <p>
            <strong>Address: </strong>
              <%= "#{@venue.street_1} #{@venue.street_2} #{@venue.city} #{@venue.state} #{@venue.zip}" %>
          </p>

          <p>
            <strong>Added By:</strong>
            <%= link_to "#{@venue.user.username}", "/users/#{@venue.user_id}"  %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @venue.description %>
          </p>

        </div>

        <div id="ratings">
            <% if !current_user.nil? %>
              <p class="pull-left">
                <strong>My Rating:</strong>
                <%= rating_for_user @venue, current_user, 'name' %>
              </p>
            <% end %>
            <p class="pull-right"><%= @venue.rates("name").count %> Rating(s)</p>
            <p class="pull-left">
              <strong>Average Rating:</strong>
              <%= rating_for @venue, 'name' %>
            </p>
        </div>
      </div> <!-- info-left -->

      <div id="info-right">
        <%= image_tag @venue.image.url %>
      </div>
    </div> <!-- class="caption-full" -->
  </div> <!-- class="thumbnail" -->

  <div class="five_space">
  </div>

  <p class="pull-right"><%= @comments.count %> Comment(s)</p>
  <h3>Comments</h3>
  <div class="well">
    <div>
      <!-- New comment form renders if user is logged in -->
      <!-- Also displays current user's rating of event -->
      <% if !current_user.nil? %>
        <h3>New Comment</h3>
        <%= render 'comments/form', comment: @comment %>
      <% else %>
       <%= link_to 'Sign in to Comment', new_user_session_path %>
      <% end %>
    </div>

    <hr>
    <% if @comments %>
      <% @comments.each do |comment| %>
        <div class="row">
          <div class="col-md-12">
            <h4> <%= comment.title %> </h4>
            <span>Posted By: <%= link_to "#{comment.user.username}", "/users/#{comment.user_id}" %> </span>
            <span class="pull-right"><%= comment.created_at %></span>
            <p>
            <%= comment.text %>
            </p>
            <%= link_to 'Edit', edit_comment_path(comment) %> |
            <%= link_to 'Destroy', comment_path(comment), method: "delete" %>
          </div>
        </div>
        <hr>
      <% end %>
    <% end %>
  </div>
</div> <!-- col-md-8 -->
<div class="col-md-2"></div>
