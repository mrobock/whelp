<%= form_for @venue, html: { multipart: true } do |f| %>
  <% if venue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul>
      <% venue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 10  %>
  </div>

  <div class="form-group">
    <%= f.label :street_1 %>
    <%= f.text_field :street_1, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :street_2 %>
    <%= f.text_field :street_2, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip, class: "form-control" %>
  </div>

<br>

  <% ability = Ability.new(current_user) %>
  <% if ability.can?(:create, Venue) %>
    <div class="field">
      <input type="hidden" name="venue[user_id]" id="venue_id" value="<%=current_user.id%>">
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.file_field :image, class: "form-control"  %>
  </div>

  <br>

  <div class="actions form-group">
    <%= f.submit 'Submit Venue', class: "btn btn-success"  %>
  </div>
<% end %>
<br>
